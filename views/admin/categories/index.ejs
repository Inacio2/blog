<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<body>

<div class="container">
    <hr>
    <h2><a href="/admin/categories/new" class="btn btn-success ">Criar nova categoria</a></h2>
    <h2>Categorias</h2>
    <hr>

    <table class="table table-bordered">

        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>

        <tbody>
            <% categories.forEach(category => { %>
                <tr>
                    <th><%= category.id %></th>
                    <th><%= category.title %></th>
                    <th><%= category.slug %></th>
                    <th>
                        <a href="/admin/categories/edit/<%=category.id%>" class="btn btn-warning">Editar</a> 
                        <form action="/admin/categories/detele" method="post" style="display: inline;" onsubmit="confirmarDelecao(event,this)" >
                            <input type="hidden" name="id" value="<%=category.id%>">
                            <button class="btn btn-danger">Excluir</button> 
                        </form>
                    </th>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<script>
    function confirmarDelecao(event,form){
        event.preventDefault();
        var decision = confirm("Deseja eliminar a categoria?");
        if(decision){
            form.submit();
        }

    }
</script>



</body>

