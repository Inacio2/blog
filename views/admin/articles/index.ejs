<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<body>

<div class="container">
    <hr>
    <h2><a href="/admin/articles/new" class="btn btn-success ">Criar novo Artigo</a></h2>
    <h2>Artigos</h2>
    <hr>

    <table class="table table-bordered">

        <thead>
            <tr>  
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
           
        <tbody>
            <% articles.forEach(article => {  %>
                <tr>
                    <td><%= article.id %></td>
                    <td><%= article.title %></td>
                    <td><%= article.slug %></td>
                    <td><%= article.category.title %></td>
                    <td>
                        <a href="" class="btn btn-warning">Editar</a>
                        <form action="/admin/articles/detele" method="post" style="display: inline;" onsubmit="confirmarDelecao(event,this)" >
                            <input type="hidden" name="id" value="<%=article.id%>">
                            <button class="btn btn-danger">Excluir</button> 
                        </form>
                    </td>
                </tr>   
            <% })%>
        </tbody>
    </table>
</div>

<script>
    function confirmarDelecao(event,form){
        event.preventDefault();
        var decision = confirm("Deseja eliminar aeste artigo?");
        if(decision){
            form.submit();
        }

    }
</script>

</body>

