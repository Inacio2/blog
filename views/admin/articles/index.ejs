<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<body>

<div class="container">
    <hr>
    <h2><a href="/admin/articles/new" class="btn btn-success ">Criar novo Artigo</a></h2>
    <h2>Artigos</h2>
    <hr>

    <table class="table table-bordered">

        <thead>
            <tr>  
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
           
        <tbody>
            <% articles.forEach(article => {  %>
                <tr>
                    <td><%= article.id %></td>
                    <td><%= article.title %></td>
                    <td><%= article.slug %></td>
                    <td><%= article.categoryId %></td>
                    <td></td>
                </tr>   
            <% })%>
        </tbody>
    </table>
</div>


</body>

