<body>

<div class="container">
    <hr>
    <h2><a href="/admin/users/create" class="btn btn-success ">Criar novo Usuário</a></h2>
    <h2>Usuários</h2>
    <hr>

    <table class="table table-bordered">

        <thead>
            <tr>  
                <th>Id</th>
                <th>Email</th>
            </tr>
        </thead>
           
        <tbody>
            <% users.forEach(user => {  %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.email %></td>
                
                </tr>   
            <% })%>
        </tbody>
    </table>
</div>

<script>
    function confirmarDelecao(event,form){
        event.preventDefault();
        var decision = confirm("Deseja eliminar aeste artigo?");
        if(decision){
            form.submit();
        }

    }
</script>

</body>

